{% extends 'base.html.twig' %}

{% block body %}
    <table>
        <thead>
        <tr>
            <th>id</th>
            <th>author</th>
            <th>message</th>
            <th>createdAt</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in viewModel.entries %}
            <tr>
                <td>{{ entry.id }}</td>
                <td>{{ entry.author }}</td>
                <td>{{ entry.message }}</td>
                <td>{{ entry.createdAt|date('d/m/Y H:i:s') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

